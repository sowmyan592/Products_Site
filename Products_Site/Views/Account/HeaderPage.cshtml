<link rel="stylesheet" href="~/Scripts/CSS/Stylesheet.css" type="text/css" />

<nav class="navbar navbar-expand-lg  fixed-top mainhome">
   
        @Html.ActionLink("Products", "Index", "Home", new { @class = "navbar-brand" })
   
   
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
            

                @if (Request.IsAuthenticated)
                {


                    @Html.ActionLink("Log Out", "Logout", "Account", new { @class = "btn" });

                }
                else
                {

                    @Html.ActionLink("Login", "Login", "Account", new { @class = "btn" })

                }
            
            
                @if (!Request.IsAuthenticated)
                {

                    @Html.ActionLink("Register", "Register", "Account", new { @class = "btn" })

                }

            
        </ul>

    </div>
</nav>

