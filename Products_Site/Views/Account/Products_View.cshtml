@model IEnumerable<Products_Site.Models.ProductDetail>

<div class="container" style="margin-top:100px !important">
        <div>
            @Html.ActionLink("Create New", "Product","Account", new { @class = "btn btn-primary" })
        </div>

        <div>
           @Html.ActionLink("Convert To Excel", "ExportExcel_EmployeeData", "Account", new { @class = "btn btn-primary" })
        </div>
    <table class="table">
        <tr>
               <th>
                   @Html.DisplayNameFor(model => model.Email)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.Product_type)
              </th>
              <th>
                 @Html.DisplayNameFor(model => model.Product_name)
              </th>
              <th>
                 @Html.DisplayNameFor(model => model.Product_price)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.Product_weight)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.Product_description)
             </th>
        
       </tr>

      @foreach (var item in Model)
       {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Product_type)
          </td>
           <td>
            @Html.DisplayFor(modelItem => item.Product_name)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Product_price)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Product_weight)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Product_description)
          </td>
          <td>
            @Html.ActionLink("Edit", "Update", new { id=item.Product_id , @class= "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Product_id, @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Product_id, @class = "btn btn-primary" })
          </td>
        </tr>
       }

   </table>
</div>
